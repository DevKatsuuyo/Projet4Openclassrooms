# Activer la compression gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Mise en cache navigateur
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images (30 jours)
    ExpiresByType image/webp "access plus 30 days"
    ExpiresByType image/jpeg "access plus 30 days"
    ExpiresByType image/png "access plus 30 days"
    ExpiresByType image/gif "access plus 30 days"
    ExpiresByType image/svg+xml "access plus 30 days"
    
    # CSS et JS (7 jours)
    ExpiresByType text/css "access plus 7 days"
    ExpiresByType application/javascript "access plus 7 days"
    ExpiresByType text/javascript "access plus 7 days"
    
    # Polices (1 an)
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    
    # HTML (pas de cache - toujours frais)
    ExpiresByType text/html "access plus 0 days"
</IfModule>

# Headers de cache
<IfModule mod_headers.c>
    Header set Cache-Control "public, max-age=2592000" ".webp"
    Header set Cache-Control "public, max-age=604800" ".css"
    Header set Cache-Control "public, max-age=604800" ".js"
    Header set Cache-Control "no-cache, must-revalidate" ".html"
</IfModule>